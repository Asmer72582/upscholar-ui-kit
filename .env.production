# Production Environment Configuration for WebRTC Meeting System

# Frontend Configuration (Vercel)
VITE_API_URL=http://13.60.254.183:3000
VITE_SOCKET_URL=http://13.60.254.183:3000
VITE_ENABLE_HTTPS=true
VITE_WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
VITE_TURN_SERVER_ENABLED=false
VITE_ENVIRONMENT=production

# Backend Configuration (EC2)
NODE_ENV=production
PORT=3000
MONGODB_URI=mongodb://localhost:27017/upscholar
JWT_SECRET=your-jwt-secret-here
CORS_ORIGIN=https://upscholar-ui-kit.vercel.app
FRONTEND_URL=https://upscholar-ui-kit.vercel.app

# SSL Configuration (Nginx)
SSL_CERT_PATH=/etc/letsencrypt/live/api.upscholar.in/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/api.upscholar.in/privkey.pem

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302,stun:stun2.l.google.com:19302
TURN_SERVER_ENABLED=false
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_SERVER_USERNAME=your-username
# TURN_SERVER_CREDENTIAL=your-password

# Socket.IO Configuration
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_CORS_ORIGIN=https://upscholar-ui-kit.vercel.app
SOCKET_IO_SECURE=true

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-here

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_WEBRTC_LOGGING=true